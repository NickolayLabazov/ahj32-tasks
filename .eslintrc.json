{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "off",
        "import/extensions": "off",
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "max-len": "off",
        "eqeqeq": "off",
        "consistent-return": "off"        
    }
}